{% extends 'admin/base.html.twig' %}

{% block title %}
	{{ (app.request.get('_route') == 'app_admin_jeu_ajouter' ? 'Ajouter' : 'Modifier') }}
	un Jeu
{% endblock %}

{% block body %}
	<h1>{{ (app.request.get('_route') == 'app_admin_jeu_ajouter' ? 'Ajouter' : 'Modifier') }}
		un Jeu</h1>


	<div class="W-25 mt-5">
		{{ form_start(form)}}

		{{ form_row(form.nom) }}
		{{ form_row(form.genre)}}
		{{ form_row(form.dateSortie) }}
		{{ form_row(form.description) }}

		<button class="btn btn-success" type="submit">{{ (app.request.get('_route') == 'app_admin_jeu_ajouter' ? 'Ajouter' : 'Modifier') }}</button>

		{{ form_end(form)}}
	</div>
{% endblock %}
